{% extends '::base.html.twig' %}

{% block title %}
    Inscription
{% endblock %}

{% block body %}
    <form method="post" novalidate="novalidate" {{ form_enctype(form) }}>
        <div id="register">
            <div>{{ form_label(form.login, 'Login (minecraft)') }}{{ form_errors(form.login) }}{{ form_widget(form.login) }}</div>
            <div>{{ form_label(form.password, 'Mot de passe') }}{{ form_errors(form.password) }}{{ form_widget(form.password) }}</div>
            <div>{{ form_label(form.firstname, 'Pr√©nom') }}{{ form_errors(form.firstname) }}{{ form_widget(form.firstname) }}</div>
            <div>{{ form_label(form.name, 'Nom') }}{{ form_errors(form.name) }}{{ form_widget(form.name) }}</div>
            {{ form_rest(form) }}
        </div>
        <input type="submit" class="button_blue" value="Demande d'inscription" />
    </form>
{% endblock %}
